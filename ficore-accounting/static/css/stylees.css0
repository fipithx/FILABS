.card-icon { font-size: 1.5rem; color: var(--text-color); }

.card-narrow { max-width: 400px; margin: 0 auto; }

.card-wide { max-width: 600px; margin: 0 auto; }

/* Financial Summary */
.financial-summary, .quick-actions, .tools-section, .recent-activity, .navigation-cards, .why-section, .testimonials-section, .faq-section, .cta-section {
    background: linear-gradient(135deg, var(--card-bg), rgba(255, 255, 255, 0.9));
