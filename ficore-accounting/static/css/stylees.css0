    width: 36px;
    top: 50%;
    transform: translateY(-50%);
}

@media (max-width: 576px) {
    .testimonials-section { margin: 1.5rem 0.5rem; }
    .testimonials-section .carousel-control-prev, .testimonials-section .carousel-control-next { height: 32px; width: 32px; }
    .avatar-circle { width: 50px; height: 50px; font-size: 1.2rem; }
    .testimonials-section .testimonial p { font-size: 0.85rem; }
}

/* FAQ Section */
.faq-section .accordion-button {
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--text-color);
    background: var(--card-bg);
    border-radius: 0.75rem;
    padding: 0.75rem;
    display: flex;
    align-items: center;
}

.faq-section .accordion-button:not(.collapsed) {
    background: var(--button-secondary-hover);
    color: var(--accent-blue);
}

.faq-section .accordion-button i { margin-right: 0.5rem; font-size: 1.2rem; }

.faq-section .accordion-body {
    font-size: 0.9rem;
    color: var(--text-secondary);
    padding: 0.75rem;
    line-height: 1.6;
}

@media (max-width: 576px) {
    .faq-section { margin: 1.5rem 0.5rem; }
    .faq-section .accordion-button { font-size: 1rem; }
    .faq-section .accordion-body { font-size: 0.85rem; }
}

/* CTA Section */
.cta-section {
    padding: 2rem 1.5rem;
    text-align: center;
    border-radius: 0.75rem;
    box-shadow: var(--card-shadow);
    margin: 2rem 1rem;
    animation: fadeIn 0.5s ease-in-out 0.6s both;
}

.cta-section h3 {
    font-size: clamp(1.8rem, 4vw, 2.2rem);
    font-weight: 700;
    margin-bottom: 1rem;
}

.cta-section p {
    font-size: clamp(1rem, 2.5vw, 1.2rem);
    color: var(--text-muted);
    margin-bottom: 1.5rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
}

.cta-section .btn-lg, .cta-section .dropdown-toggle {
    padding: 0.75rem 2rem;
    font-size: clamp(1rem, 2vw, 1.1rem);
    font-weight: 600;
    border-radius: 0.5rem;
    box-shadow: var(--card-shadow);
}

.cta-section .btn-lg:hover, .cta-section .dropdown-toggle:hover {
    transform: translateY(-2px);
    box-shadow: var(--card-shadow-hover);
}

@media (max-width: 576px) {
    .cta-section { padding: 1.5rem 1rem; margin: 1.5rem 0.5rem; }
    .cta-section h3 { font-size: clamp(1.5rem, 3.5vw, 1.8rem); }
    .cta-section p { font-size: clamp(0.9rem, 2vw, 1rem); }
    .cta-section .btn-lg, .cta-section .dropdown-toggle { padding: 0.6rem 1.5rem; font-size: 0.9rem; }
}

@media (max-width: 360px) {
    .cta-section { padding: 1rem 0.5rem; margin: 1rem 0.3rem; }
    .cta-section h3 { font-size: clamp(1.3rem, 3vw, 1.6rem); }
    .cta-section p { font-size: clamp(0.8rem, 1.8vw, 0.9rem); }
}

/* Footer */
.footer {
    background: var(--footer-bg);
    color: var(--navbar-text-color);
    padding: 0.75rem 0;
    text-align: center;
    flex-shrink: 0;
}

.footer a {
    color: var(--footer-link-color);
    text-decoration: none;
    margin: 0 0.5rem;
    font-size: 0.9rem;
}

.footer a:hover, .footer a:active {
    color: var(--accent-blue);
    text-decoration: underline;
}

/* Accessibility */
.sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    border: 0;
}

:focus-visible { outline: 3px solid var(--accent-blue); outline-offset: 2px; }

/* Custom Scrollbar */
::-webkit-scrollbar { width: 8px; height: 8px; }

::-webkit-scrollbar-track { background: var(--card-bg); }

::-webkit-scrollbar-thumb { background: var(--text-muted); border-radius: 4px; }

::-webkit-scrollbar-thumb:hover { background: var(--accent-blue); }

/* Print Styles */
@media print {
    .navbar, .bottom-nav, .footer, .alert-container, .visibility-toggle, .header-actions { display: none; }
    .header-actions .no-js-intercept { display: block !important; }
    body { background: #ffffff; color: #000000; padding-bottom: 0; }
    .card, .summary-card, .stat-card, .action-card, .nav-card, .tool-card, .role-card { border: 1px solid #000000; box-shadow: none; }
    .table { border: 1px solid #000000; }
    .table th, .table td { border: 1px solid #000000; }
    .btn, .btn-primary, .btn-secondary { display: none; }
}

/* Responsive Vertical Button Group */
.responsive-btn-group {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
}

@media (max-width: 600px) {
    .responsive-btn-group { flex-direction: column; align-items: stretch; gap: 0.4rem; }
    .responsive-btn-group .btn, .responsive-btn-group form { width: 100%; }
    .responsive-btn-group form { margin-bottom: 0 !important; }
}

/* Tooltips */
.tooltip-inner {
    background: var(--card-bg);
    color: var(--text-color);
    border-radius: 0.5rem;
    padding: 0.5rem;
    box-shadow: var(--card-shadow);
}

.tooltip.bs-tooltip-top .tooltip-arrow::before { border-top-color: var(--card-bg); }
.tooltip.bs-tooltip-bottom .tooltip-arrow::before { border-bottom-color: var(--card-bg); }
.tooltip.bs-tooltip-start .tooltip-arrow::before { border-left-color: var(--card-bg); }
.tooltip.bs-tooltip-end .tooltip-arrow::before { border-right-color: var(--card-bg); }

.dark-mode .tooltip-inner { background: var(--navbar-bg); }
.dark-mode .tooltip.bs-tooltip-top .tooltip-arrow::before { border-top-color: var(--navbar-bg); }
.dark-mode .tooltip.bs-tooltip-bottom .tooltip-arrow::before { border-bottom-color: var(--navbar-bg); }
.dark-mode .tooltip.bs-tooltip-start .tooltip-arrow::before { border-left-color: var(--navbar-bg); }
.dark-mode .tooltip.bs-tooltip-end .tooltip-arrow::before { border-right-color: var(--navbar-bg); }
